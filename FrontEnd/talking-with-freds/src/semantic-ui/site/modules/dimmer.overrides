/*******************************
        User Overrides
*******************************/
.dimmer {
    padding: 0 !important;
    background: rgba(0, 0, 0, 0.75) !important;

    &[fullscreenshadow] {
    	position: absolute;
    	top: 0;
    	left: 0;
    	width: 100%;
    	height: 100%;
    	background: rgba(0, 0, 0, 0.75) !important;
    }
}